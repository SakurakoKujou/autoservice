<h1>New Service <h1>
<%= form_with model: [@service]  do |c| %>
  <%= c.text_field :name , placeholder: 'Name_service'%>
  <%= c.label :category_id , "CategoryID:" %>
  <%= c.collection_select :category_id, Category.all, :id, :name %>
  <%= c.label :performer_id , "PerformerID:" %>
  <%= c.collection_select :performer_id, Performer.all, :id, :lastName %>
  <%= c.submit "Send" %>
<% end %>
</html>